<!DOCTYPE html>
<html ng-app="opentok-meet-login">
    <head>
        <meta http-equiv="Content-type" content="text/html; charset=utf-8">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1">
        <link rel="icon" sizes="128x128" href="icon.png">
        <link href='//fonts.googleapis.com/css?family=Ropa+Sans' rel='stylesheet' type='text/css'>
        <title>OpenTok Meet</title>
        <script src="/js/lib/angular/angular.min.js" type="text/javascript" charset="utf-8"></script>
        <link rel="stylesheet" href="/css/main.css" type="text/css" media="screen" title="no title" charset="utf-8">
        <link rel="stylesheet" href="/css/index.css" type="text/css" media="screen" title="no title" charset="utf-8">
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-49010461-2', 'auto');
          ga('send', 'pageview');

        </script>
    </head>
    <body ng-controller="MainCtrl">
        <div id="wrapper">
            <img src="images/opentok-meet-logo.png" alt="Logo" class="logo">
            <form id="joinRoom" ng-submit="joinRoom()">
                <input type="text" name="room" value="" ng-model="room" id="room" placeholder="room name">
                <input type="submit" name="joinRoom" value="Join" id="joinRoomBtn">
            </form>
        </div>
        <script type="text/javascript" charset="utf-8">
        angular.module('opentok-meet-login', [])
          .controller('MainCtrl', function($scope, $window) {
            $scope.room;
            $scope.joinRoom = function () {
                $window.location.href = $window.location.href + encodeURIComponent($scope.room);
            }
        });
        </script>
    </body>
</html>